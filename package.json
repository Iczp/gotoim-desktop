{
  "name": "gotoim-desktop",
  "productName": "Goto IM",
  "version": "1.0.0",
  "description": "An Electron application with Vue and TypeScript",
  "main": "./out/main/index.js",
  "author": "1000@intry.cn",
  "homepage": "https://gotoim.com",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --cache .",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "vue-tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "npm run typecheck && electron-vite build",
    "build:web": "pnpm exec vite build --config vite.config.ts",
    "preview:web": "pnpm exec vite preview --config vite.config.ts --strictPort --port 5173",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "dayjs": "^1.11.18",
    "electron-updater": "^6.6.2",
    "pinia": "2",
    "vue-router": "4"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "3.0.0",
    "@electron-toolkit/eslint-config-ts": "^3.1.0",
    "@electron-toolkit/tsconfig": "^2.0.0",
    "@iconify/json": "^2.2.395",
    "@types/node": "^22.18.10",
    "@unocss/preset-attributify": "^66.5.3",
    "@unocss/preset-uno": "^66.5.3",
    "@unocss/vite": "^66.5.3",
    "@vitejs/plugin-vue": "^6.0.1",
    "dotenv": "^17.2.3",
    "electron": "^38.2.2",
    "electron-builder": "^25.1.8",
    "electron-vite": "^4.0.1",
    "eslint": "^9.37.0",
    "eslint-plugin-vue": "^10.5.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "unocss": "^66.5.3",
    "vite": "^7.1.9",
    "vue": "^3.5.22",
    "vue-eslint-parser": "^10.2.0",
    "vue-tsc": "^3.1.1"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron",
      "esbuild"
    ]
  }
}
